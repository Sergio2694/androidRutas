<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sergio_pc.proyectoandroid.Hola"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="379dp"
        android:layout_height="173dp"
        app:srcCompat="@drawable/turisteando"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="379dp"
        android:layout_height="74dp"
        android:text="Sitios turisticos de Turrialba"
        android:textAlignment="center"
        android:textColor="#0e0e0e"
        android:textSize="25dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="174dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="248dp"
        android:entries="@array/Precio"

        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="368dp"
        android:layout_height="31dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="288dp"
        android:entries="@array/Tipo_Turista"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="368dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="328dp"
        android:entries="@array/Tipo_Actividad"

        />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="368dp"
        android:layout_height="26dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="369dp"
        android:entries="@array/Tipo_Atractivo"
        />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textColor="#0a0a0a"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="419dp" />



</android.support.constraint.ConstraintLayout>
